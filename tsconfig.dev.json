{
  "compilerOptions": {
    "declaration": true,
    "incremental": true,
    "importHelpers": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build-dev-server",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es6"
  },
  "exclude": [ "node_modules", "build", "dist" ],
  "files": [
    "src/index.tsx",
    "src/export/index.ts",
    "src/types/index.d.ts",
  ]
}
